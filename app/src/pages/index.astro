---
import UserChat from "../components/UserChat.astro";
import AIChat from "../components/AIChat.astro";
import { io } from "socket.io-client";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Kalam&family=Kanit&display=swap"
      rel="stylesheet"
    />
    <title>Documentation Cypher</title>
  </head>
  <body class="bg-gradient-to-t from-darkgreen to-lightgreen overflow-x-clip">
    <div class="flex flex-col mt-36 p-8 gap-4">
      <li class="list-none text-background font-kanit text-2xl">
        Documentation
      </li>
      <li class="list-none text-background font-kanit text-2xl">History</li>
    </div>
    <div
      class="h-screen w-full overflow-x-clip rounded-[48px] ml-48 -mt-60 bg-background"
    >
      <div id="chat" class="flex flex-col w-full m-16 text-center items-center">
        <ul class="text-xl font-kanit text-gold" id="chat-messages">
        <UserChat title="Me: " />
	</ul>
        <AIChat title="AI: " body="response" />
        <div id="output" class="h-48 w-96 bg-pink rounded-xl text-lightgreen">
        </div>
        <div class="flex flex-row gap-2 mt-8">
          <input
            type="text"
            id="question-text"
            Placeholder="Question"
            class="bg-background drop-shadow-lg rounded-full border-2 border-gold text-pink font-kalam p-4 font-semibold text-xl"
          />
          <button
            class="flex flex-row gap-2 bg-gold text-background text-xl p-6 drop-shadow-lg rounded-full text-center align-middle font-kalam font-semibold rounded-full"
            id="question-btn"
            >Send
            <svg
              class="fill-background"
              xmlns="http://www.w3.org/2000/svg"
              height="1em"
              viewBox="0 0 512 512"
              ><!--! Font Awesome Free 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. -->
              <path
                d="M16.1 260.2c-22.6 12.9-20.5 47.3 3.6 57.3L160 376V479.3c0 18.1 14.6 32.7 32.7 32.7c9.7 0 18.9-4.3 25.1-11.8l62-74.3 123.9 51.6c18.9 7.9 40.8-4.5 43.9-24.7l64-416c1.9-12.1-3.4-24.3-13.5-31.2s-23.3-7.5-34-1.4l-448 256zm52.1 25.5L409.7 90.6 190.1 336l1.2 1L68.2 285.7zM403.3 425.4L236.7 355.9 450.8 116.6 403.3 425.4z"
              ></path></svg
            ></button
          >
        </div>
        <script type="module" src="/client.js"></script>
      </div>
    </div>
  </body>
</html>
